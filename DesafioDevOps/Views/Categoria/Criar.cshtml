@model CategoriaModel
@{
    ViewData["Title"] = "Criar categoria";
}
<div class="text-center">

    <h1 class="display-4">Cadastrar categorias</h1>

</div>

<form asp-controller="Categoria" asp-action="Criar" method="post">

  <div class="mb-3">
    <label for="categoria" class="form-label">Categoria</label>
    <input type="text" asp-for="Categoria" class="form-control" placeholder="Digite a categoria">
    @Html.ValidationMessageFor(x => x.Categoria)
  </div>

  <div class="mb-3">
    <label for="descricao" class="form-label">Descrição</label>
    <input type="text" asp-for="Descricao" class="form-control" placeholder="Descreva sobre a categoria">
    @Html.ValidationMessageFor(x => x.Descricao)
  </div>

  <div class="d-grid gap-2">
      <button type="submit" class="btn btn-primary">Adicionar</button>
      <a class="btn btn-secondary asp-controller="Categoria" asp-action="Index" role="button">Voltar</a>
  </div>
</form>


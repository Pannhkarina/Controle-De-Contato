@model CategoriaModel
@{
    ViewData["Title"] = "Confirmação apagar categoria";
}

<div class="text-center">
    <h3>Realmente deseja apagar a categoria (@Model.Categoria)?</h3>
</div>
 <div class="d-grid gap-2">
      <a class="btn btn-primary" role="button" asp-controller="Categotia" asp-route-id="@Model.Id" asp-action="Apagar">Confirmar exclusão</a>
      <a class="btn btn-danger" role="button" asp-controller="Categoria" asp-action="Index" >Cancelar exclusão</a>
  </div>
